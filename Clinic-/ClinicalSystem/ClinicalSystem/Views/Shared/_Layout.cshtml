<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClinicSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Clinic.styles.css" asp-append-version="true" />
</head>
<body>
    <header style="text-align:center;  background-color:rgba(15, 63, 45, 0.3) ;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="text-align:center; font-size:20px; text-align:center; margin-right:20%; ">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item  me-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Clinic</a>
                        </li>
                        <li class="nav-item  me-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="account" asp-action="Index1">Doctor</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Index10">Patient</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index4">Payment</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index5">ContactUs</a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

