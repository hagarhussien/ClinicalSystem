            <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color:white; text-decoration:none;">Privacy</a>
            <a asp-area="" asp-controller="Home" asp-action="Index" style="color:white; text-decoration:none;">Home</a>
            <a asp-area="" asp-controller="account" asp-action="Index1" style="color:white; text-decoration:none;">Doctor</a>
            <a asp-area="" asp-controller="Login" asp-action="Index2" style="color:white; text-decoration:none;">patients</a>
            <a asp-area="" asp-controller="Home" asp-action="Index4" style="color:white; text-decoration:none;">Payment</a>
            <a asp-area="" asp-controller="Home" asp-action="Index5" style="color:white; text-decoration:none;">ContactUs</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
